<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="16dp"
    app:strokeWidth="0dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="1dp"
    style="?attr/materialCardViewElevatedStyle"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">
        <ImageView
            android:id="@+id/item_cover_book_imageview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/item_title_book_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_cover_book_imageview"
            tools:text="Pemograman Android" />

        <TextView
            android:id="@+id/item_isbn_book_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:letterSpacing="0"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/item_title_book_textview"
            tools:text="ISBN: 918730383782" />

        <TextView
            android:id="@+id/item_category_book_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintEnd_toEndOf="parent"
            android:letterSpacing="0"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_isbn_book_textview"
            tools:text="KATEGORI: Ilmu Komputer" />

        <TextView
            android:id="@+id/item_availability_book_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:letterSpacing="0"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintEnd_toEndOf="@+id/item_category_book_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_category_book_textview"
            tools:text="tersedia" />

        <TextView
            android:id="@+id/item_stock_book_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:letterSpacing="0"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintStart_toStartOf="@+id/item_category_book_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_category_book_textview"
            tools:text="stock 10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>